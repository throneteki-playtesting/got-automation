{
    "version": "0.2.0",
    "compounds": [
        {
            "name": "Launch Program",
            "configurations": ["Launch (Server)", "Launch (Client)", "Launch (Browser)"],
            "stopAll": true,
            "presentation": {
                "hidden": false,
                "group": "",
                "order": 1
            }
        }
    ],
    "configurations": [
        {
            "name": "Launch (Browser)",
            "type": "msedge",
            "request": "launch",
            "url": "http://localhost:5173/",
            "webRoot": "${workspaceFolder}/client/src",
            "sourceMaps": true,
            "smartStep": true
        },
        {
            "name": "Launch (Client)",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/client",
            "stopOnEntry": false,
            "runtimeExecutable": "vite",
            "env": {
                "NODE_ENV": "development"
            },
            "console": "internalConsole",
            "sourceMaps": true
        },
        {
            "name": "Launch (Server)",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/server",
            "runtimeExecutable": "tsx",
            "runtimeArgs": [
                // "watch", -- Fails to watch on "internalConsole"
                "src/app.ts"
            ],
            "skipFiles": ["<node_internals>/**"],
            "console": "internalConsole",
            "sourceMaps": true
        }
    ]
}