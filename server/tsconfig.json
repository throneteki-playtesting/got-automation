{
  "compilerOptions": {
    "target": "ES2024",
    "lib": ["esnext", "DOM"],
    "module": "ES2022",
    "moduleResolution": "node",
    "allowJs": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "common/*": ["../common/*"]
    },
    "outDir": "dist",
    "strict": false,
    "experimentalDecorators": true
  },
  "include": [
    "src",
    "../common"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
